<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_leaflet" name="Leaflet">
        <section class="leaflet">
            <div class="container">
                <div class="row">
                    <div id="mapid" style="height:300px;width:300px;"></div>
                </div>
            </div>
        </section>
    </template>

    <template id="website_leaflet_snippet" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]"
               position="after">
            <t t-snippet="website_leaflet.s_leaflet"
               t-thumbnail="/website_leaflet/static/description/icon.png"/>
        </xpath>
    </template>

    <template id="leaflet" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss"
                  href="/website_leaflet/static/src/scss/leaflet.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript"
                    src="/website_leaflet/static/src/js/website.leaflet.animation.js"/>
            <script type="text/javascript"
                    src="/website_leaflet/static/src/js/lib/leaflet.js"/>
        </xpath>
    </template>
</odoo>

