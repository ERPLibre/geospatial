    <!-- Category Views -->

    <record id="website_leaflet_category_view_form" model="ir.ui.view">
        <field name="name">website_leaflet.category.view.form</field>
        <field name="model">website_leaflet.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <field name="name"/>
